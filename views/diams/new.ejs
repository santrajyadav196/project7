<% layout ('layouts/boilerplate') %> 
<div class="row">
       <div class="col-6 offset-3">
            <h1>Add New</h1>
    <form action="/diams" method="POST" novalidate class='validated-form'>
        <div class="mb-3">
        <label class="form-label" for="title">Title:</label>
        <input class="form-control" type="text" name="title" id="title" placeholder="name" required>
         <div class='valid-feedback'>Looks good!!</div>
        </div>
        <div class="mb-3">
        <label class="form-label" for="body">Body:</label><br>
        <textarea class="form-control" name="body" id="body" placeholder="body" cols="20" rows="3" required></textarea>
         <div class='valid-feedback'>Looks good!!</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="isActive">IsActive:</label>
            <select name="isActive" id="isActive">
                <option value='active'>Active</option>
                <option value='inactive'>inactive</option>
            </select>
        </div>
        <div class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input class="form-control" type="text" name="location" id="location" placeholder="location" required>
         <div class='valid-feedback'>Looks good!!</div>
        </div>
        <div class="mb-3">
        <button class='btn btn-info'>Submit</button>
        <a class="btn btn-primary" href="/diams">Back</a>
        <div class="mb-3">
    </form>
       </div>
   </div>